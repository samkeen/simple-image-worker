{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "The Worker Queue Example Infrastructure",
  "Metadata": {
  },
  "Resources": {
    "ImageManipulationWorkQueue": {
      "Type": "AWS::SQS::Queue",
      "Properties": {
        "QueueName": "ImageManipulationWorkQueue"
      }
    },
    "ImagesBucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "AccessControl": "PublicRead"
      }
    },
    "Ec2Role": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "ec2.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "Path": "/"
      }
    },
    "Ec2RoleInstanceProfile": {
      "Type": "AWS::IAM::InstanceProfile",
      "Properties": {
        "Path": "/",
        "Roles": [
          {
            "Ref": "Ec2Role"
          }
        ]
      }
    },
    "Ec2RolePolicies": {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": "root",
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Sid": "EnableToLocateTheProcessedImagesBucket",
              "Effect": "Allow",
              "Action": [
                "s3:ListBucket"
              ],
              "Resource": [
                {
                  "Fn::Join": [
                    "",
                    [
                      "arn:aws:s3:::",
                      {
                        "Ref": "ImagesBucket"
                      }
                    ]
                  ]
                }
              ]
            },
            {
              "Sid": "EnableWriteAccessToProcessedImagesBucket",
              "Effect": "Allow",
              "Action": [
                "s3:PutObject"
              ],
              "Resource": [
                {
                  "Fn::Join": [
                    "",
                    [
                      "arn:aws:s3:::",
                      {
                        "Ref": "ImagesBucket"
                      },
                      "/*"
                    ]
                  ]
                }
              ]
            }
          ]
        },
        "Roles": [
          {
            "Ref": "Ec2Role"
          }
        ]
      }
    }
  },
  "Outputs": {
    "ImageManipulationWorkQueue": {
      "Value": {
        "Fn::GetAtt": [
          "ImageManipulationWorkQueue",
          "Arn"
        ]
      },
      "Description": "The Work Queue to hold requests to process images"
    },
    "ImagesBucket": {
      "Value": {
        "Ref": "ImagesBucket"
      },
      "Description": "The S3 storage bucket for Images (original and processed)"
    },
    "WebAppRoleProfileName": {
      "Value": {
        "Ref": "Ec2RoleInstanceProfile"
      },
      "Description": "This is the AWS Role our App server uses. It grants write access to Images S3 bucket."
    }
  }
}
